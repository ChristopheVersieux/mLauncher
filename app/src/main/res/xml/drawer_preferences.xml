<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <PreferenceCategory android:title="@string/search">
        <SwitchPreferenceCompat
            android:key="HIDE_SEARCH_VIEW"
            android:title="@string/hide_search_view"
            app:iconSpaceReserved="false" />



    </PreferenceCategory>

    <PreferenceCategory android:title="@string/layout_positioning">
        <ListPreference
            android:key="DRAWER_ALIGNMENT"
            android:title="@string/list_layout"
            android:entries="@array/alignment_names"
            android:entryValues="@array/alignment_values"
            android:defaultValue="Right"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:key="DRAWER_TYPE"
            android:title="@string/drawer_sort"
            android:entries="@array/drawer_type_entries"
            android:entryValues="@array/drawer_type_values"
            android:defaultValue="Alphabetical"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:key="CATEGORIES_LAYOUT"
            android:title="@string/categories_layout"
            android:entries="@array/categories_layout_entries"
            android:entryValues="@array/categories_layout_values"
            android:defaultValue="Top"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/hidden_apps">
        <Preference
            android:key="MANAGE_HIDDEN_APPS"
            android:title="@string/manage_hidden_apps"
            android:summary="@string/manage_hidden_apps_summary"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Tags">
        <Preference
            android:key="AUTO_TAG"
            android:title="Auto Tag"
            android:summary="work, private.. and whatever categories we find"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
</PreferenceScreen>
