<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="style/Widget.Material3.BottomSheet"
    android:id="@+id/drawerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Drag Handle at the very top -->
    <!-- Header Container (Visible in Peek) -->
    <LinearLayout
        android:id="@+id/drawerHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <!-- Drag Handle -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/bottom_sheet_handle"
            android:backgroundTint="?attr/primaryColor" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/peekSpacer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/drawerHeader" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/peekSpacer"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:iconifiedByDefault="false"
        app:queryHint="Search apps..." />

    <!-- Categories Navigation Rail (vertical, on the left) -->
    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/categoriesNavigationRail"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_below="@id/search"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:labelVisibilityMode="unlabeled"
        app:menuGravity="top" />

    <!-- Filter Bar Container (horizontal chips) -->
    <FrameLayout
        android:id="@+id/filterBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:clipToPadding="false"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:singleLine="false"
            app:singleSelection="true"
            app:selectionRequired="true" />
    </FrameLayout>

    <com.github.creativecodecat.components.views.FontAppCompatTextView
        android:id="@+id/appDrawerTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterBarContainer"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_drawer_tips"
        android:textColor="?attr/primaryColor"
        android:textSize="16sp"
        android:visibility="gone" />

    <ViewSwitcher
        android:id="@+id/menuView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/appDrawerTip"
        android:layout_toEndOf="@id/categoriesNavigationRail"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false">

        <!-- RecyclerView for apps -->
        <com.github.creativecodecat.components.views.FontRecyclerView
            android:id="@+id/appsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadingEdgeLength="20dp"
            android:padding="0dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />

        <!-- RecyclerView for contacts -->
        <com.github.creativecodecat.components.views.FontRecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadingEdgeLength="20dp"
            android:padding="0dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />
    </ViewSwitcher>

    <FrameLayout
        android:id="@+id/sidebar_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:visibility="gone">

        <!--app.wazabe.mlauncher.ui.components.AZSidebarView
            android:id="@+id/azSidebar"
            android:layout_width="32dp"
            android:layout_height="match_parent" /-->
    </FrameLayout>

    <!-- List Empty Container, center aligned -->
    <LinearLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.github.creativecodecat.components.views.FontAppCompatTextView
            android:id="@+id/listEmptyHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_list_empty_hint"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearFiltersButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Clear all filters"
            app:icon="@drawable/ic_restart" />
    </LinearLayout>

    <!-- Bottom Filter Bar Container (for Chips Bottom mode) -->
    <FrameLayout
        android:id="@+id/filterBarContainerBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        android:clipToPadding="false"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroupBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp"
            app:singleLine="false"
            app:singleSelection="true"
            app:selectionRequired="true" />
    </FrameLayout>

</RelativeLayout>