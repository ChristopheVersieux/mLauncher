<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true">

    <!-- Header with Icons (Visible in Peek) -->
    <LinearLayout
        android:id="@+id/drawerHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/drawerFabAction"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/show"
            android:src="@drawable/ic_cascade_launcher" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Label or just space to act as handle -->
        <com.github.creativecodecat.components.views.FontAppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•••"
            android:textColor="?attr/primaryColor"
            android:alpha="0.3"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/drawerFabSettings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/show"
            android:src="@drawable/ic_settings"
            app:tint="?attr/primaryColor" />
    </LinearLayout>

    <!-- Search Bar positioned below header -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawerHeader"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <com.github.creativecodecat.components.views.FontSearchView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:queryHint="___"
            app:searchIcon="@drawable/ic_search"
            app:theme="@style/AppSearchText" />

        <ImageView
            android:id="@+id/workApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/work_profile" />

        <ImageView
            android:id="@+id/privateApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/private_profile_off" />

        <ImageView
            android:id="@+id/systemApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/system_profile" />

        <ImageView
            android:id="@+id/internetSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_browser" />

        <ImageView
            android:id="@+id/searchSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_contacts" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />
    </LinearLayout>

    <com.github.creativecodecat.components.views.FontAppCompatTextView
        android:id="@+id/appDrawerTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchContainer"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_drawer_tips"
        android:textColor="?attr/primaryColor"
        android:textSize="16sp"
        android:visibility="gone" />

    <ViewSwitcher
        android:id="@+id/menuView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/appDrawerTip"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false">

        <!-- RecyclerView for apps -->
        <com.github.creativecodecat.components.views.FontRecyclerView
            android:id="@+id/appsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadingEdgeLength="20dp"
            android:padding="0dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />

        <!-- RecyclerView for contacts -->
        <com.github.creativecodecat.components.views.FontRecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadingEdgeLength="20dp"
            android:padding="0dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />
    </ViewSwitcher>

    <FrameLayout
        android:id="@+id/sidebar_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:visibility="gone">

        <app.wazabe.mlauncher.ui.components.AZSidebarView
            android:id="@+id/azSidebar"
            android:layout_width="32dp"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- List Empty Hint, center aligned -->
    <com.github.creativecodecat.components.views.FontAppCompatTextView
        android:id="@+id/listEmptyHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/drawer_list_empty_hint"
        android:textSize="20sp" />

</RelativeLayout>
