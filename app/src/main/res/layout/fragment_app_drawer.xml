<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryShadeDarkColor">

    <!-- Search Bar positioned at the top -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <com.github.creativecodecat.components.views.FontSearchView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:queryHint="___"
            app:searchIcon="@drawable/ic_search"
            app:theme="@style/AppSearchText" />

        <ImageView
            android:id="@+id/workApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/work_profile" />

        <ImageView
            android:id="@+id/privateApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/private_profile_off" />

        <ImageView
            android:id="@+id/systemApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/system_profile" />

        <ImageView
            android:id="@+id/internetSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_browser" />

        <ImageView
            android:id="@+id/searchSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/advanced_settings_app_info_title"
            android:paddingHorizontal="5dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_contacts" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />
    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filterChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchContainer"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:chipSpacingHorizontal="8dp"
        app:chipSpacingVertical="4dp"
        app:singleLine="false"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:visibility="gone" />

    <com.github.creativecodecat.components.views.FontAppCompatTextView
        android:id="@+id/clearHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterChipGroup"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="18dp"
        android:paddingVertical="4dp"
        android:textSize="16sp"
        android:visibility="gone"
        app:theme="@style/AppSearchText" />

    <!-- Drawer button and tip, positioned below search container -->
    <com.github.creativecodecat.components.views.FontAppCompatTextView
        android:id="@+id/drawerButton"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clearHomeButton"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/app_padding_vertical"
        android:textAllCaps="true"
        android:visibility="gone" />

    <com.github.creativecodecat.components.views.FontAppCompatTextView
        android:id="@+id/appDrawerTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawerButton"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_drawer_tips"
        android:textColor="?attr/primaryColor"
        android:textSize="16sp"
        android:visibility="gone" />

    <ViewSwitcher
        android:id="@+id/menuView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/appDrawerTip"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false">

        <!-- Apps view with debug text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <!-- DEBUG: Static text to verify layout is visible -->
            <TextView
                android:id="@+id/debugText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”´ DEBUG: HIDDEN APPS SCREEN ðŸ”´"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:background="#FFFF00" />
            
            <!-- RecyclerView positioned below the Drawer TextViews -->
            <com.github.creativecodecat.components.views.FontRecyclerView
                android:id="@+id/appsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:fadingEdgeLength="20dp"
                android:padding="0dp"
                android:requiresFadingEdge="vertical"
                android:scrollbars="none" />
        </LinearLayout>

        <com.github.creativecodecat.components.views.FontRecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadingEdgeLength="20dp"
            android:padding="0dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />
    </ViewSwitcher>

    <FrameLayout
        android:id="@+id/sidebar_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:visibility="gone">

        <!--app.wazabe.mlauncher.ui.components.AZSidebarView
            android:id="@+id/azSidebar"
            android:layout_width="32dp"
            android:layout_height="match_parent" /-->
    </FrameLayout>


    <!-- List Empty Container, center aligned -->
    <LinearLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.github.creativecodecat.components.views.FontAppCompatTextView
            android:id="@+id/listEmptyHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_list_empty_hint"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearFiltersButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Clear all filters"
            app:icon="@drawable/ic_restart" />
    </LinearLayout>

</RelativeLayout>
